@model IEnumerable<ImageSharingWithCloudStorage.Models.Image>

@{
    ViewBag.Title = "All Images";
}

<h2>@ViewBag.Title</h2>

<table class="table" >
    <tr>
        <th>Caption</th>
        <th>Uploader</th>
        <th>Tag</th>
        <th>Actions</th>
    </tr>

    @foreach (var image in Model)
    {
        <tr>
            <td>
                @image.Caption
            </td>
            <td>
                @image.User.UserName
            </td>
            <td>
                @image.Tag.Name
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@image.Id">Details</a>
            </td>

            @if (ViewBag.UserName.Equals(image.User.UserName))
            {
                <!-- TODO-DONE add Edit and Delete links -->
                <td>
                    <a asp-action="Edit" asp-route-id="@image.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@image.Id">Delete</a>
                </td>
            }
        </tr>
    }
</table>